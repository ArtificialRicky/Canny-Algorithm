{
    "tasks": [
        {
            "label": "C/C++: g++ build active file",
            "type": "shell",
            "command": "make",
            "args": [
                "--directory=\"${workspaceFolder}\"",
                "debug",
                "DIR=\"\"",
                "CPP_FILE=\"${file}\"",
                "OUTPUT_FILE=\"${fileDirname}/${fileBasenameNoExtension}\""
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}